{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "manifest_version": 2,
  "name": "Github Colorful Streak",
  "version": "1.1",
  "description": "Custom Github contribution streak color.",
  "options_page": "options.html",
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "browser_action": {
    "default_title": "Github colorful",
    "default_icon": "128.png"
  },
  "permissions": [
    "tabs",
    "*://github.com/*",
    "storage"
  ]
}